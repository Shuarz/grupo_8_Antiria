<%- include('../partials/head', {tituloWeb: 'Antiria - Vender' }) %>

    <body>

        <!-- HEADER -->
        <%- include("../partials/header")%>
            <!-- FIN HEADER -->


            <main class="vender-main">
                <section class="vender-box">
                    <form action="/listadoProducto/<%= locals.userLogged.id %>/vender" method="POST" enctype="multipart/form-data">
                        <h2 class="title , opciones , title-vender">Vende tu producto</h2>
                        <div class="input-box , opciones ">
                            <input name="nombreProducto" type="text">
                            <label>Nombre del producto</label>
                        </div>
                        <% if (locals.errors && errors.nombreProducto) { %>
                            <p class="errors"><%= errors.nombreProducto.msg %></p>
                        <% } %>

                        <div class="input-box , opciones ">
                            <input name="precioProducto" type="number">
                            <label class="nombre_precio">Precio del producto</label>
                        </div>
                        <% if (locals.errors && errors.precioProducto) { %>
                            <p class="errors"><%= errors.precioProducto.msg %></p>
                        <% } %>

                        <div class="categoria-vender ">
                            <p class=" opciones">Categoría del producto</p>
                            <article class="botonera , opciones">
                                <select name="categoriaProducto" class="opciones-botonera">
                                    <option selected disabled class="opcion">Categorias</option>
                                    <option value="Joyeria" class="opcion">Joyeria</option>
                                    <option value="Reliquia" class="opcion">Reliquia</option>
                                    <option value="Mueble" class="opcion">Mueble</option>
                                    <option value="Arte" class="opcion">Arte</option>
                                    <option value="Musica" class="opcion">Musica</option>
                                    <option value="Reloj" class="opcion">Reloj</option>
                                    <option value="Otro" class="opcion">Otro</option>
                                </select>
                            </article>
                        </div>
                        <% if (locals.errors && errors.categoriaProducto) { %>
                            <p class="errors2"><%= errors.categoriaProducto.msg %></p>
                        <% } %>

                        <div class="categoria-vender ">
                            <p class=" opciones">Marca del producto</p>
                            <article class="botonera , opciones">
                                <select name="marca" class="opciones-botonera" >
                                    <option selected disabled class="opcion">Marcas</option>
                                    <option value="Sony" class="opcion">Sony</option>
                                    <option value="Rolex" class="opcion">Rolex</option>
                                    <option value="Louis Vuitton" class="opcion">Louis Vuitton</option>
                                    <option value="Nintendo" class="opcion">Nintendo</option>
                                    <option value="Mercedes Benz" class="opcion">Mercedes Benz</option>
                                    <option value="Otro" class="opcion">Otro</option>
                                </select>
                            </article>
                        </div>
                        <% if (locals.errors && errors.marca) { %>
                            <p class="errors2"><%= errors.marca.msg %></p>
                        <% } %>

                        <div class="opciones">
                            <label>Descripción del producto</label>
                        </div>
                        <input name="descripcionGeneral" class="myTextarea , opciones">
                        <% if (locals.errors && errors.descripcionGeneral) { %>
                            <p class="errors2"><%= errors.descripcionGeneral.msg %></p>
                        <% } %>
                        <div>
                            <label class="opciones">Subir imagen del producto</label>
                        </div>
                        <div  class="subir-imagen , opciones">
                            <input name="imagenProducto" type="file" multiple>
                        </div>
                        <% if (locals.errors && errors.imagenProducto) { %>
                            <p class="errors2"><%= errors.imagenProducto.msg %></p>
                        <% } %>
                        </div>
                        <div class="opciones">
                            <p>¿Se encuentra en oferta?</p>
                            <input type="radio" name="oferta" value=True >
                            <label for="">Si</label><br>

                            <input type="radio" name="oferta" value=False>
                            <label for="">No</label><br>
                        </div>
                        <% if (locals.errors && errors.oferta) { %>
                            <p class="errors2"><%= errors.oferta.msg %></p>
                        <% } %>


                        <div class="realizarlacompra">
                            <button class="realizar-compra , Cancelar  , opciones" type="reset">Cancelar</button>
                            <button class="realizar-compra , publicar ,   opciones" type="submit"> Publicar </button>
                        </div>
                    </form>
                </section>
            </main>




            <!-- FOOTER -->
            <%- include("../partials/footer")%>
                <!-- FIN FOOTER -->

    </body>

    </html>
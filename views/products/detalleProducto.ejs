<%- include('../partials/head', {tituloWeb: 'Antiria - Detalle Producto'}) %>

<body>

    <!-- HEADER -->
    <%- include("../partials/header")%>
    <!-- FIN HEADER -->

    <main class="main-detalle-prod">
        <div class="main-contenedor-detalle-prod">


            <div class="contenedor-producto">
                <div class="detalle-prod-main">
                    <div class="imagenes-web">
                        <div class="imagen-del-producto">
                            <img class="foto-producto" src="/img/products/<%= prodUD.imagen_prod %>" alt="foto-de-producto">
                        </div>
                        <div class="carousel">
                            <div class="item"><img src="/img/products/<%= prodUD.imagen_prod %>"></div>
                            <div class="item"><img src="/img/products/<%= prodUD.imagen_prod %>"></div>
                            <div class="item"><img src="/img/products/<%= prodUD.imagen_prod %>"></div>
                            <div class="item"><img src="/img/products/<%= prodUD.imagen_prod %>"></div>

                        </div>
                    </div>
                    <div class="nombre-precio">

                        <h3>
                            <%= prodUD.nombre %>
                        </h3>

                        <h4>
                            $<%= prodUD.precio.toLocaleString('es-ES'); %>
                        </h4>
                        <% if (locals.isLogged) { %>
                            <form action="">
                                <button class="submitCart" type="submit">Agregar al carrito</button>
                            </form>
                        <% } else { %>
                            <form action="/login">
                                <button class="submitCart" type="submit">Agregar al carrito</button>
                            </form>
                        <% } %>

                    </div>
                </div>
            </div>
            <div class="descripcion-prod">
                <h4>Descripci√≥n del producto</h4>
                <hr/>

                <h4>
                    <%= prodUD.nombre %>
                </h4>

                <h5>
                    <%= prodUD.descripcion %>
                </h5>

            </div>
        </div>


    </main>

        <!-- FOOTER -->
        <%- include("../partials/footer")%>
            <!-- FIN FOOTER -->

</body>

</html>
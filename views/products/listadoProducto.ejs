<%- include('../partials/head', {tituloWeb: 'Antiria - Listado' }) %>

    <body>
        <!-- HEADER -->
        <%- include("../partials/header.ejs")%>
            <!-- FIN HEADER -->
            <main class="carrito-main">
                </div>
                <ul class="carrito-seguimiento">
                    <li>
                        <div class="carrito">
                            <a>Tus publicaciones</a>
                        </div>
                    </li>

                </ul>
                <section class="main-search2">
                    <% if (productsUser.length===0) { %>
                        <h4 class="notfound-search">No tiene publicaciones hechas ðŸ˜”</h4>
                    <% } else { %>
                        <% productsUser.forEach ((row)=> { %>
                            <article>
                                <div class="imagen-detalle-prod">
                                    <img src="/img/products/<%= row.image %>" alt="">
                                </div>
                                <div class="descripcion_search_prod2">
                                    <h3><%= row.nombreProducto %></h3>
                                    <h4 class="green">$<%= row.precioProducto.toLocaleString('es-ES'); %></h4>
                                    <div class="eliminar-edit">
                                        <form method="POST" action="">
                                            <a type="submit" class="eliminar" id="product-delete" href="/listadoProducto/<%= locals.userLogged.id %>/delete/<%= row.id %>?_method=DELETE" onclick="return confirm('Â¿Realmente desea eliminar este producto?')"><i class="fa-sharp fa-solid fa-trash"></i></a>
                                        </form>
                                        <a id="product-edit" href="/listadoProducto/<%= locals.userLogged.id %>/edicionProducto/<%= row.id %>"> <i class="fa-solid fa-pen-to-square "></i></a>
                                    </div>
                                </div>
                            </article>
                            <hr>
                        <% }) %>
                    <% } %>
                    <div class="realizar-compra3">
                        <a href="/listadoProducto/<%= locals.userLogged.id %>/vender" class="realizar-compra2 ">Vender tu producto</a>
                    </div>

                </section>
            </main>


            <!-- FOOTER -->
            <%- include("../partials/footer.ejs")%>
                <!-- FIN FOOTER -->
    </body>

    </html>
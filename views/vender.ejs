</head>

<body>

    <!-- HEADER -->
    <%- include("./partials/header")%>
    <!-- FIN HEADER -->


    <main class="carrito-main">
        <section class="vender-box">
        <form action="">
                <h2 class="title , title-vender">Vende tu producto</h2>
                    <div class="input-box">
                        <input type="text" required>
                    <label>Nombre del producto</label>
                    </div>
                    <div>
                    <label>Descripcion del producto</label>
                    </div>
                    <textarea required></textarea>
                    <div>
                    <label>Subir imagen del producto</label>
                    </div>
                    <input type="file">
                    </div>
                    <div class="categoria-vender">
                        <p>Categoria del producto</p>
                        <label >Joyeria</label>
                        <input type="radio" value="Joyeria"  >
                        
                        <label >Reliquia</label>

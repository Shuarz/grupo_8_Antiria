<%- include('../partials/head', {tituloWeb: 'Antiria - Carrito'}) %>

<body>
    <!-- HEADER -->
    <%- include("../partials/header.ejs")%>
    <!-- FIN HEADER -->

    
    <main class="carrito-main">
        <section class="vender-box">
            <form action="/tusventas" method="post">
                <h2 class="title , opciones , title-vender">Edite tu producto</h2>
                <div class="input-box , opciones ">
                    <input name="nombreProducto" type="text" required>
                    <label>Nombre del producto</label>
                </div>
                <div class="input-box , opciones ">
                    <input name="PrecioProducto" type="number" required>
                    <label class="nombre_precio">Precio del producto</label>
                </div>
                <div class="categoria-vender ">
                    <p class=" opciones">Categoria del producto</p>
                    <div class="botonera , opciones">
                        <select name="categoriaProducto" class="opciones-botonera">
                            <option selected disabled class="opcion">Categorias</option>
                            <option value="joyeria" class="opcion">Joyeria</option>
                            <option value="Reliquia" class="opcion">Reliquia</option>
                            <option value="Mueble" class="opcion">Mueble</option>
                            <option value="Arte" class="opcion">Arte</option>
                            <option value="Discos" class="opcion">Discos</option>
                        </select>
                    </div>
                </div>
                <div class="opciones">
                    <label>Descripcion del producto</label>


                </div>
                <textarea name="descripcionGeneral" class="myTextarea , opciones" required></textarea>
                <div>
                    <label class="opciones">Subir imagen del producto</label>

                </div>
                <div  class="subir-imagen , opciones"><input name="imagenProducto" type="file"></div>

                </div>

                <div class="realizarlacompra">
                    <button class="realizar-compra , Cancelar  , opciones" type="reset">Cancelar</button>
                    <button class="realizar-compra , publicar ,   opciones" type="submit"> Terminar edicion </button>
                </div>
            </form>
        </section>
    </main>
    <!-- FOOTER -->
    <%- include("../partials/footer.ejs")%>
    <!-- FIN FOOTER -->
  </body>
  
  </html>
                        <label >Mueble</label>
                        <input type="radio" value="Mueble" >
                        <label>Arte</label>
                        <input type="radio" value="Arte"  >
                        <label >Discos</label>
                        <input type="radio" value="Discos" >
                        
                        
                    </div>
                        
                    <div class="input-box">
                        <input type="number" required>
                        <label class="nombre_precio">precio del producto</label>
                        
                        
                    </div>
                    <div class="realizarlacompra">
                    <button class="realizar-compra , Cancelar " type="reset">Cancelar</button>
                    <button class="realizar-compra , publicar , " type="submit"> Publicar </button>
                    </div>
        </form>
        </section>
    </main>




    <!-- FOOTER -->

<%- include('../partials/head', {tituloWeb: 'Antiria - Carrito'}) %>
<body>
    <!-- HEADER -->
    <%- include("../partials/header.ejs")%>
    <!-- FIN HEADER -->
        <main class="carrito-main">
            </div>
            <ul class="carrito-seguimiento">
                <li>
                    <div class="carrito">
                    <i ><a href="/carrito">Carrito</a></i>
                    </div>
                </li>
                <li>
                    <div class="seguimiento">
                    <i><a href="" >Seguimiento</a></i>
                    </div>
                </li>
            </ul>
            <section class="main-cart">
                <% if (cart.length===0) { %>
                    <h4 class="notfound-search">Carrito vacio ðŸ«¨</h4>
                <% } else { %>
                    <% cart.forEach ((row)=> { %>
                        <article>
                            <div class="imagen-detalle-prod">
                                <img src="/img/products/<%= row.image %>" alt="">
                            </div>
                            <div class="descripcion_search_prod2">
                                <h3><%= row.nombreProducto %></h3>
                                <h4 class="green">$<%= row.precioProducto.toLocaleString('es-ES'); %></h4>
                                <div class="eliminar-edit">
                                    <form method="POST" action="">
                                        <a type="submit" class="eliminar" id="product-delete" href="/carrito/<%= locals.userLogged.id %>/<%= row.id %>?_method=DELETE" onclick="return confirm('Â¿Realmente desea eliminar este producto?')">
                                            <i class="fa-sharp fa-solid fa-trash"></i>
                                        </a>
                                    </form>
                                </div>
                            </div>
                        </article>
                        <hr>
                    <% }) %>
                    <div class="totalCart">
                        <h3 class="subtotal subtotal2">SubTotal: <%= subtotal.toLocaleString('es-ES') %></h3>
                        <h3 class="subtotal">Envio: $ 1.500</h3>
                        <h2 class="total green">Total: <%= precio.toLocaleString('es-ES') %></h2>
                        <button class="realizar-compra">Realizar compra</button>
                    </div>
                <% } %>
            </section>
        </main>


    <!-- FOOTER -->
    <%- include("../partials/footer.ejs")%>
    <!-- FIN FOOTER -->
</body>

</html>